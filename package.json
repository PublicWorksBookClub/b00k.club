{
  "name": "b00k.club",
  "version": "1.4.0",
  "description": "The website for the Public Works book club: we only read works in the public domain",
  "scripts": {
    "fmt": "npx prettier . --write",
    "build": "zola build $BUILD_OPTS && npx @tailwindcss/cli -i ./css/input.css -o ./public/style.css -m",
    "serve": "zola serve $SERVE_OPTS & npx @tailwindcss/cli  -i ./css/input.css -o ./public/style.css --watch && wait",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/PublicWorksBookClub/b00k.club"
  },
  "keywords": [
    "books",
    "book",
    "club",
    "public domain",
    "public works"
  ],
  "author": "Spencer Scorcelletti",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/PublicWorksBookClub/b00k.club/issues"
  },
  "homepage": "https://b00k.club/",
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.9",
    "prettier": "^3.6.2",
    "prettier-plugin-jinja-template": "^2.1.0",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "prettier-plugin-toml": "^2.0.6",
    "tailwindcss": "^4.1.12"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "volta": {
    "node": "20.19.4"
  }
}
